<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="/assets/vendor/css/bootstrap.min.css">
    <link rel="stylesheet" href="/assets/vendor/css/bootstrap-theme.min.css">
    <link rel="stylesheet" href="/assets/vendor/js/themes/default/style.min.css">
    <link rel="stylesheet" href="/assets/css/main.css">
    <title>Document</title>
</head>
<body ng-app="JRAdmin">
<div class="container">
    <nav class="navbar navbar-default">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="/">Jackrabbit admin</a>
            </div>

            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav">
                    <li {% if current_route == 'front' %}class="active"{% endif %}><a href="{{ path_for('front') }}">Home</a></li>
                    <li {% if current_route == 'nodes' %}class="active"{% endif %}><a href="{{ path_for('nodes') }}">Nodes</a></li>
                    <li {% if current_route == 'node_types' %}class="active"{% endif %}><a href="{{ path_for('node_types') }}">Node types</a></li>
                </ul>
            </div>
        </div>
    </nav>

    {% block content %}{% endblock %}

    <script src="/assets/vendor/js/jquery.min.js"></script>
    <script src="/assets/vendor/js/bootstrap.min.js"></script>
    <script src="/assets/vendor/js/angular.min.js"></script>

    <script>
        angular.module('JRAdmin', []).config(function($interpolateProvider){
            $interpolateProvider.startSymbol('[[').endSymbol(']]');
        });
    </script>
    {% block javascript %}{% endblock %}
</div>
</body>
</html>
